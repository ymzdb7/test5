	<select id="queryList" resultType="com.winhands.modules.market.entity.OrderEntity">
		SELECT * from  tb_order
		<where>
		<!-- <if test="address != null and address.trim() != ''">
				and `address` like concat('%',#{address},'%') 
			</if> -->
			<if test="address != null and address.trim() != ''">
				and `address` =#{address}
			</if>
			<if test="orderState != null and orderState.trim() != ''">
				and `order_state` like concat('%',#{orderState},'%') 
			</if>
			
		<if test="userId != null">
				and `user_id`=#{userId}
			</if>	
			
			
		</where>
			<where>
		<if test="id != null">
				and `id`=#{id} 
			</if>
		</where>
		
		order by id 
		desc 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
<!-- 查询最新产生的订单 -->
	<select id="queryNew" resultType="com.winhands.modules.market.entity.OrderEntity">
	SELECT * from tb_order ORDER BY id desc LIMIT 1
	</select>

	
	
