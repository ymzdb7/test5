	/**
	 * 确认提货操作
	 */	
	@RequestMapping(value="/orderOk" , method = RequestMethod.POST)
	public R orderOk(String orderId){
			
				OrderEntity order=orderService.queryObject(Long.valueOf(orderId));
				if(order.getOrderState().equals("1")||order.getOrderState().equals("2")) {
					order.setOrderState("3");
					orderService.update(order);
					return R.ok("已提货！");
				}else {
					return R.error("操作失败！");
				}
	}	
	
